<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="io.github.therealmone.fireres.gui.controller.TopMenuBarController">
    <menus>
        <Menu mnemonicParsing="false" text="Файл">
            <items>
                <MenuItem mnemonicParsing="false" text="Экспорт" onAction="#exportSamples"/>
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Помощь">
            <items>
                <MenuItem fx:id="aboutProgramMenuItem" onAction="#openAboutProgramModalWindow" mnemonicParsing="false" text="О программе"/>
                <MenuItem fx:id="userGuideMenuItem" onAction="#openUserGuideLink" mnemonicParsing="false" text="Руководство пользователя"/>
            </items>
        </Menu>
    </menus>
</MenuBar>
