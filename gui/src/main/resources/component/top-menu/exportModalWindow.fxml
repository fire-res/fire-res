<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" stylesheets="/css/style.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="component"
            fx:controller="io.github.therealmone.fireres.gui.controller.modal.export.ExportModalWindow">
    <VBox>
        <HBox>
            <VBox alignment="CENTER">
                <Label alignment="CENTER" text="Образцы" styleClass="exportHeaderFont">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                </Label>
                <ScrollPane fitToWidth="true">
                    <VBox fx:id="exportSamplesVbox" prefHeight="500.0">
                        <fx:include source="sampleExportComponent.fxml"/>
                    </VBox>
                </ScrollPane>
            </VBox>
            <VBox>
                <fx:include source="sampleGroupComponent.fxml"/>
            </VBox>
        </HBox>
        <ButtonBar>
            <buttons>
                <Button text="Добавить группу"/>
                <Button onAction="#exportSamples" text="Экспортировать"/>
            </buttons>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
        </ButtonBar>
    </VBox>
</AnchorPane>
